<!-- 削除用フラッシュメッセージ -->
<div>
  <%= flash[:notice] %>
</div>

<body>

  <h1>Books</h1>

 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<!-- 投稿一覧 -->
  <% @books.each do |book| %>
   <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
   </tbody>
  <% end %>
</table>

<!-- バリデーションエラーメッセージを表示 -->
 <h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<!-- bookの新規登録機能 -->
<%= form_with model: @book, url: 'books', method: :post do |f| %>
<div class="field">
  <label for="title">Title</label>
  <div class="form">
    <%= f.text_field:title %>
  </div>
</div>

<div class="field">
  <label for="body">Body</label>
  <div class="form">
    <%= f.text_area:body %>
  </div>
</div>

<div class="field">
  <div class="action">
    <%=f.submit "Create Book"%>
  </div>
</div>
<% end %>
</body>